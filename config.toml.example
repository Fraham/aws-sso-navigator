# AWS SSO Navigator Configuration
# Place this file at ~/.config/aws-sso-navigator/config.toml

# Default values to pre-select (optional)
default_client = "myclient"
default_account = "dev"
default_role = "admin"

# Use unified mode by default (optional)
unified_mode = false

# Use tree view by default (optional)
tree = false

# Set selected profile as default (optional)
set_default = true

# List profiles without selection (optional)
list = false

# Show recent profiles first (optional)
recent = false

# Maximum number of recent profiles to keep (optional)
max_recent_profiles = 100

# Force reauthentication even if session is valid (optional)
force_reauth = false

# Check for existing valid sessions (optional)
check_session = true

# Custom AWS config path (optional)
# aws_config_path = "/path/to/custom/config"

# Custom browser for AWS SSO login (optional)
# To use Chrome
# browser = "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
# To use Firefox
# browser = "/Applications/Firefox.app/Contents/MacOS/firefox"